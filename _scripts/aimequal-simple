#!/usr/bin/env bash
# Simple aimequal that doesn't create zombies
set -euo pipefail

echo "Running simple aimequal checks..."

# Run each check with proper cleanup
echo "1. Prettier check..."
npx prettier --check . 2>/dev/null || npx prettier --write . 2>/dev/null

echo "2. ESLint check..."  
npx eslint . --fix 2>/dev/null || true

echo "3. TypeScript check..."
pnpm typecheck 2>/dev/null || true

echo "4. Tests..."
pnpm test 2>/dev/null || true

echo "Done!"